{
    "name": "webfont-vscode",
    "displayName": "Webfont",
    "description": "Import and download fonts from Fontstorage.com collection.",
    "version": "1.2.0",
    "icon": "images/logo.jpg",
    "publisher": "WebFont",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:webfont"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "webfont",
                "title": "Webfont"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == css",
                    "command": "webfont"
                },
                {
                    "when": "editorLangId == html",
                    "command": "webfont"
                },
                {
                    "when": "resourceExtname == .sass",
                    "command": "webfont"
                },
                {
                    "when": "resourceExtname == .scss",
                    "command": "webfont"
                },
                {
                    "when": "resourceExtname == .less",
                    "command": "webfont"
                },
                {
                    "when": "resourceExtname == .styl",
                    "command": "webfont"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.1",
		"@types/node": "^16.11.33",
        "@types/vscode": "^1.68.0",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "tslint": "^5.8.0"
    },
    "dependencies": {
        "axios": "^0.27.2"
    }
}
